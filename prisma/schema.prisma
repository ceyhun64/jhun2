generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma" // schema.prisma'ya göre relative
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  summary     String
  url         String
  image       String
  description String
  demoUrl     String?
  githubUrl   String?

  subImage1 String?
  subImage2 String?
  subImage3 String?
  subImage4 String?
  subImage5 String?

  technologies ProjectTechnology[] // ← explicit join table

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Technology {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  icon  String
  type  String
  yoe   Int
  color String

  projects ProjectTechnology[] // ← explicit join table
}

model ProjectTechnology {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  project      Project    @relation(fields: [projectId], references: [id])
  projectId    String
  technology   Technology @relation(fields: [technologyId], references: [id])
  technologyId String

  @@unique([projectId, technologyId]) // aynı ilişkiyi tekrar eklemeyi önler
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  surname  String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}
